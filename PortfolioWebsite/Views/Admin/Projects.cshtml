@model IEnumerable<PWEntity.Project>

@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Projects</h2>

<p>
    @Html.ActionLink("Create New", "CreateProject")
</p>
<table class="table">
    <tr>
        <th>
            <label>Name</label>
        </th>
        <th>
            <label>Details</label>
        </th>
        <th>
            <label>Source URL</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.projectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.projectDetails)
        </td>
        <td>
            <a href="@item.sourceUrl"> Click here</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProject", new { id=item.id }) |
           
            @Html.ActionLink("Delete", "DeleteProject", new { id=item.id })
        </td>
    </tr>
}

</table>
